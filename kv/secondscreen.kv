
<SecondScreen>:
    FloatLayout:
        GridLayout:
            cols: 1
            pos_hint: {"top": .8, "center_x": .5}
            size_hint: 1, .2
            Label:
                font_size: '30sp'
                text: ""
                id: menu_label
            Label:
                font_size: '25sp'
                id: company_label
            Label:
                font_size: '20sp'
                id: cost_label
        GridLayout:
            cols: 1
            pos_hint: {"top": .5, "center_x": .4}
            size_hint: .6, .25
            GridLayout:
                rows: 1
                Label:
                    text: "У вас есть: "
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
                Label:
                    id: buy_money
                    text_size: self.size
                    halign: 'left'
                    valign: 'middle'
            TextInput:
                input_filter: 'int'
                font_size: '20sp'
                multiline: False
                id: cost_input
            Widget:
            Widget:
            Widget:
            Widget:
        GridLayout:
            cols: 1
            pos_hint: {"top": .5, "center_x": .5}
            size_hint: .6, .25
            Widget:
            Widget:
            Widget:
            Label:
                font_size: '20sp'
                id: show_cost
            Label:
                font_size: '20sp'
                id: show_cost_label
            Button:
                size_hint_y: 1.5
                id: buy_button
                on_release:
                    app.operation()
                    app.change_screen_money("home_screen")
            Button:
                size_hint_y: 1.5
                text: "Назад"
                on_release:
                    app.change_screen("home_screen")
        GridLayout:
            rows: 1
            pos_hint: {"top": .46, "center_x": .8}
            size_hint: 0.18, 0.048
            Button:
                text: "max"
                font_size: '13sp'
                on_release:
                    app.max()
            Button:
                text: "="
                on_release:
                    app.multiply()