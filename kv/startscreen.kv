
<StartScreen>:
    FloatLayout:
        GridLayout:
            rows: 3
            pos_hint: {"x": .1, "y": .3}
            size_hint: .8, .4
            id: start_grid
            Label:
                text:
                    "Введите ваше имя"
                font_size: '20sp'
            TextInput:
                size_hint: .5, .5
                multiline: False
                font_size: '20sp'
                id: text_name
            Button:
                size_hint_y: .5
                text:
                    "Далее"
                on_release:
                    app.change_screen("home_screen")
                    app.change_name(text_name.text)
                    app.change_time()
                    app.capital()