                text: "Цена"
                color: [191, 191, 191, 1]
                font_size: 25
            Label:
                text: "Кол."
                color: [191, 191, 191, 1]
                font_size: 25
            Label:
                markup: True
                text: '[font=arial][color=008000]▲[/color][color=FF0000]▼[/color][/font]'
                font_size: 25
            #2 строка
            Label:
                text: "Apple"
                text_size:self.size
                halign:'left'
                valign:'middle'
            Label:
                text: "267$"
                id: apple_cost
            Label:
                text: "0"
                id: kol_vo1
            Label:
                text: "0"
                id: raznica1
