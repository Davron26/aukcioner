            rows: 6
            pos_hint: {"top": .92, "right": 1}
            size_hint: .2, .32
            Button:
                text: "+"
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Покупка", 1)
            Button:
                text: "-"
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продажа", 1)
            Button:
                text: "+"
