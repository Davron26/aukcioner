#:import utils kivy.utils

<HomeScreen>:
    FloatLayout:
        GridLayout:
            cols: 7
            rows: 6
            pos_hint: {"top": 1, "right": 1}
            size_hint: 1, .4
            #1 строка
            Widget:
            Label:
                text: "Компания"
                color: [191, 191, 191, 1]
                font_size: 13
                text_size:self.size
                halign:'left'
                valign:'middle'
            Label:
                text: "Цена"
                color: [191, 191, 191, 1]
                font_size: 13
            Label:
                text: "Кол."
                color: [191, 191, 191, 1]
                font_size: 13
            Label:
                markup: True
                text: '[font=arial][color=008000]▲[/color][color=FF0000]▼[/color][/font]'
                font_size: 13
            Widget:
            Widget:
            #2 строка
            Label:
                text: "1"
            Label:
                text: "Apple"
                text_size:self.size
                halign:'left'
                valign:'middle'
                font_size: 13
            Label:
                text: "267$"
                id: apple_cost
            Label:
                text: "0"
                id: kol_vo1
            Label:
                text: "0"
                id: raznica1
            Button:
                text: "+"
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Купить", 1)
            Button:
                text: "-"
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продать", 1)
            #3 строка
            Label:
                text: "2"
            Label:
                text: "Google"
                text_size:self.size
                halign:'left'
                valign:'middle'
                font_size: 13
            Label:
                text: "39$"
                id: google_cost
            Label:
                text: "0"
                id: kol_vo2
            Label:
                text: "0"
                id: raznica2
            Button:
                text: "+"
                choose: 1
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Купить", 2)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продать", 2)
            #4 строка
            Label:
                text: "3"
            Label:
                text: "Facebook"
                text_size:self.size
                halign:'left'
                valign:'middle'
                font_size: 13
            Label:
                text: "175$"
                id: facebook_cost
            Label:
                text: "0"
                id: kol_vo3
            Label:
                text: "0"
                id: raznica3
            Button:
                text: "+"
                choose: 1
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Купить", 3)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продать", 3)
            #5 строка
            Label:
                text: "4"
            Label:
                text: "Microsoft"
                text_size:self.size
                halign:'left'
                valign:'middle'
                font_size: 13
            Label:
                text: "165$"
                id: microsoft_cost
            Label:
                text: "0"
                id: kol_vo4
            Label:
                text: "0"
                id: raznica4
            Button:
                text: "+"
                choose: 1
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Купить", 4)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продать", 4)
            #6 строка
            Label:
                text: "5"
            Label:
                text: "Yandex"
                text_size:self.size
                halign:'left'
                valign:'middle'
                font_size: 13
            Label:
                text: "36$"
                id: yandex_cost
            Label:
                text: "0"
                id: kol_vo5
            Label:
                text: "0"
                id: raznica5
            Button:
                text: "+"
                choose: 1
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Купить", 5)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продать", 5)
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#808080")
                Line:
                    rectangle: self.x, self.y, self.width, self.height - (self.height / 11)
            cols: 1
            pos_hint: {"top": .4, "left": 1}
            size_hint: .2, .4
            Widget:
            Label:
                text: "Ваше имя: "
                font_size: 22.5
                color: [191, 191, 191, 1]
            Label:
                id: menu_name
                font_size: 20
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Дата: "
                font_size: 22.5
                color: [191, 191, 191, 1]
            Label:
                id: menu_time
                font_size: 20
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Ход: "
                font_size: 22.5
                color: [191, 191, 191, 1]
            Label:
                text: "0"
                id: menu_count
                font_size: 20
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Деньги: "
                font_size: 22.5
                color: [191, 191, 191, 1]
            Label:
                text: "10,000.00$"
                id: menu_money
                font_size: 20
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Капитал: "
                font_size: 22.5
                color: [191, 191, 191, 1]
            Label:
                text: "10000.00$"
                id: menu_capital
                font_size: 20
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
        GridLayout:
            cols: 1
            pos_hint: {"top": .3, "right": 1}
            size_hint: .5, .3
            Button:
                text: "Закончить ход"
                on_release:
                    app.change_count()
                    app.change_time()
                    app.change_value()
                    app.capital()
                font_size: 13
            Button:
                text: "Сохранить(в разработке!)"
                font_size: 13
            Button:
                text: "Загрузить(в разработке!)"
                font_size: 13
