                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продажа", 6)
        GridLayout:
            canvas:
                Color:
                    rgb: utils.get_color_from_hex("#808080")
                Line:
                    rectangle: self.x, self.y, self.width, self.height - (self.height / 11)
            cols: 1
            pos_hint: {"top": .4, "left": 1}
            size_hint: .2, .4
            Widget:
            Label:
                text: "Ваше имя: "
                font_size: 32.5
                color: [191, 191, 191, 1]
            Label:
                id: menu_name
                font_size: 30
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Дата: "
                font_size: 32.5
                color: [191, 191, 191, 1]
            Label:
                id: menu_time
                font_size: 30
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Ход: "
                font_size: 32.5
                color: [191, 191, 191, 1]
            Label:
                text: "0"
                id: menu_count
                font_size: 30
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Деньги: "
                font_size: 32.5
                color: [191, 191, 191, 1]
            Label:
                text: "10,000.00$"
                id: menu_money
                font_size: 30
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
            Label:
                text: "Капитал: "
                font_size: 32.5
                color: [191, 191, 191, 1]
            Label:
                text: "10000.00$"
                id: menu_capital
                font_size: 30
                bold: True
                text_size: self.size
                halign: 'center'
                valign: 'top'
                canvas:
                    Color:
                        rgb: utils.get_color_from_hex("#808080")
                    Line:
                        rectangle: self.x, self.y, self.width, self.height * 2
        GridLayout:
            cols: 1
            pos_hint: {"top": .3, "right": 1}
            size_hint: .5, .3
            Button:
                text: "Закончить ход"
                on_release:
                    app.change_count()
                    app.change_time()
                    app.change_value()
                    app.capital()
            Button:
