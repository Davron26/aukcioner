                    app.change_text("Покупка", 2)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продажа", 2)
            Button:
                text: "+"
                choose: 1
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Покупка", 3)
            Button:
                text: "-"
                choose: 2
                on_release:
                    app.change_screen("second_screen")
                    app.change_text("Продажа", 3)
